<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.avoid.playtolearn">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".activity.SettingsActivity" />
        <activity android:name=".activity.ProfileActivity" />
        <activity android:name=".activity.BoardActivity" />
        <activity android:name=".activity.RandomActivity" />
        <activity android:name=".activity.ProblemActivity"/>
        <activity android:name=".activity.MainMenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LeaderboardActivity" />
        <activity android:name=".widget.ProblemDialog" />
        <activity android:name=".activity.HelpActivity"></activity>
    </application>

</manifest>