<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.avoid.playtolearn.activity.MainMenuActivity"
    android:background="@drawable/mainmenu_background">



    <Button
        android:id="@+id/profile_button"
        android:background="@drawable/main_menu_profile_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text=""
        android:onClick="onClickProfileButton"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintRight_toLeftOf="@+id/leaderboard_button"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.76" />

    <Button
        android:id="@+id/leaderboard_button"
        android:background="@drawable/main_menu_leaderboard_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text=""
        android:onClick="onClickLeaderboardButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.75"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout" />

    <Button
        android:id="@+id/help_button"
        android:background="@drawable/main_menu_help_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text=""
        android:onClick="onClickLeaderboardButton"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/leaderboard_button"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.75" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="241dp"
        android:layout_height="212dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintVertical_bias="0.75"
        android:background="@drawable/common_window_panel"
        android:id="@+id/constraintLayout">

        <com.avoid.playtolearn.widget.MainButton
            android:id="@+id/continue_button"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:text="Continue"
            android:layout_marginRight="80dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="80dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:onClick="onClickContinueButton"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            tools:layout_editor_absoluteY="32dp" />

        <com.avoid.playtolearn.widget.MainButton
            android:id="@+id/new_game_button"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:text="New game"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:onClick="onClickNewGameButton"
            app:layout_constraintHorizontal_bias="0.496"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/continue_button" />

        <com.avoid.playtolearn.widget.MainButton
            android:id="@+id/options_button"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:text="Options"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:onClick="onClickOptionsButton"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.496"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/new_game_button" />

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>
