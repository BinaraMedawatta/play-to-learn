<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.avoid.playtolearn">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".activity.SettingsActivity"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name=".activity.ProfileActivity"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name=".activity.BoardActivity"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name=".activity.RandomActivity"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name=".activity.MainMenuActivity"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LeaderboardActivity"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name=".activity.HelpActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            tools:replace="android:theme"
            android:screenOrientation="sensorPortrait"/>
